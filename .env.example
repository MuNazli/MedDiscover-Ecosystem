# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/meddiscover?schema=public"

# Admin Credentials
# Generate hash: node -e "console.log(require('bcryptjs').hashSync('YourSecurePassword', 12))"
ADMIN_EMAIL=admin@meddiscover.de
ADMIN_PASSWORD_HASH="<generate-with-bcrypt>"

# Session Secret (generate: openssl rand -base64 32)
SESSION_SECRET="<generate-random-32-bytes>"

# Email (SMTP) - Optional for MVP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@meddiscover.de
ADMIN_NOTIFICATION_EMAIL=admin@meddiscover.de

# Captcha Secret (generate: openssl rand -base64 32)
CAPTCHA_SECRET="<generate-random-32-bytes>"

# GDPR Data Retention (days)
DATA_RETENTION_DAYS=730

# Rate Limiting
RATE_LIMIT_LEADS_PER_HOUR=5
RATE_LIMIT_LOGIN_PER_15MIN=5
